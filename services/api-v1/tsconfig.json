{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "types": ["node", "reflect-metadata"],
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@functions/*": ["src/functions/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
